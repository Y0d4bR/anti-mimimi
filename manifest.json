{
  "name": "Anti Mimimi",
  "version": "1.3",
  "manifest_version": 2,
  "description": "Removendo o mimimi do seu Facebook",
  "homepage_url": "https://twitter.com/cleefranco",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "icons": { 
    "16": "mimimi.png",
    "48": "mimimi.png",
    "128": "mimimi.png" 
  },
  "browser_action": {
    "default_title": "Remover Mimimi"
  },
  "permissions": [
    "https://*/*",
    "http://*/*",
    "tabs"
  ]
}